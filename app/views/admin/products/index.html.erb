<h2>Product List</h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("Add a product", new_admin_product_path, :class=>"btn btn-primary btn-sm") %>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th width="220">Product Pic</th>
      <th>品名</th>
      <th>价格</th>
      <th width="100">选项</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= product.id %></td>
      <td>
        <%= link_to product_path(product) do %>
         <% if product.image.present? %>
          <%= image_tag(product.image.thumb.url, class: "thumbmail") %>
        <% else %>
          <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbmail" )%>
        <% end %>
      <% end %>
      </td>
      <td><%= product.title %></td>
      <td><%= product.price %></td>
      <td>
        <%= link_to("Edit",edit_admin_product_path(product)) %> |
        <%= link_to("Destroy", admin_product_path(product), :method => :delete, :data=>{:confirm => "Are you sure?"}) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
